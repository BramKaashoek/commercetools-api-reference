#%RAML 1.0 DataType
(package): ShippingMethod
(docs-uri): https://docs.commercetools.com/http-api-projects-shippingMethods.html#shippingmethod

type: BaseResource
displayName: ShippingMethod
(updateType): ShippingMethodUpdate
properties:
  key?:
    type: string
    (hasSimpleUpdateAction): setKey
  name:
    type: string
    (hasSimpleUpdateAction): changeName
  description?:
    type: string
    (hasSimpleUpdateAction): setDescription
  taxCategory:
    type: TaxCategoryReference
    (hasUpdateAction):
      action: changeTaxCategory
      fields:
        taxCategory: TaxCategoryResourceIdentifier
      docsAnchor: change-taxcategory
  zoneRates:
    type: ZoneRate[]
    (hasUpdateActions):
      - action: addShippingRate
        docsAnchor: add-shippingrate
        fields:
          zone: ZoneResourceIdentifier
          shippingRate: ShippingRateDraft
      - action: removeShippingRate
        docsAnchor: remove-shippingrate
        fields:
          zone: ZoneResourceIdentifier
          shippingRate: ShippingRateDraft
      - action: addZone
        fields:
          zone: ZoneResourceIdentifier
      - action: removeZone
        fields:
          zone: ZoneResourceIdentifier
  isDefault:
    type: boolean
    (hasUpdateAction):
      action: changeIsDefault
      docsAnchor: change-isdefault
  predicate?:
    type: string
    (hasSimpleUpdateAction): setPredicate
