{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Attribute Type",
  "type":"object",
  "required":["name"],
  "oneOf": [
    {
      "title": "BooleanType",
      "type": "object",
      "description":"Valid values for the attribute are true and false (JSON Boolean).",
      "properties": {
        "name": {
          "type": "string",
          "value": "boolean"
        }
      }
    },
    {
      "title": "TextType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "text"
        }
      }
    },
    {
      "title": "LocalizableTextType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "ltext"
        }
      }
    },
    {
      "title": "EnumType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "enum"
        },
        "values": {
          "type": "array",
          "items":{
            "$ref":"plain-enum-value.schema.json"
          }
        }
      }
    },
    {
      "title": "LocalizableEnumType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "lenum"
        },
        "values": {
          "type": "array",
          "items":{
            "$ref":"localized-enum-value.schema.json"
          }
        }
      }
    },
    {
      "title": "NumberType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "number"
        }
      }
    },
    {
      "title": "MoneyType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "money"
        }
      }
    },
    {
      "title": "DateType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "date"
        }
      }
    },
    {
      "title": "TimeType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "time"
        }
      }
    },
    {
      "title": "DateTimeType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "datetime"
        }
      }
    },
    {
      "title": "ReferenceType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "reference"
        },
        "referenceTypeId": {
          "$ref":"reference-type-id.schema.json"
        }
      }
    },
    {
      "title": "SetType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "set"
        },
        "elementType": {
          "$ref":"#"
        }
      }
    },
    {
      "title": "NestedType",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "value": "nested"
        },
        "typeReference": {
          "$ref":"reference.schema.json"
        }
      }
    }
  ]
}
