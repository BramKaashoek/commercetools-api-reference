{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Product Type",
  "type":"object",
  "required":["id","version","createdAt","lastModifiedAt","name","description","attributes"],
  "properties":{
    "id":{
      "$ref":"id.schema.json",
      "description": "The unique ID of the product type."
    },
    "version":{
      "$ref":"version.schema.json",
      "description": "The current version of the product type."
    },
    "createdAt":{
      "$ref":"created-at.schema.json"
    },
    "lastModifiedAt":{
      "$ref":"last-modified-at.schema.json"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "attributes": {
      "type": "array",
      "items":{
        "$ref":"attribute-definition.schema.json"
      }
    }
  }
}
